# Application Settings
APP_NAME=Interactive Homework Learning Platform
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./homework_platform.db
# For PostgreSQL: postgresql://user:password@localhost:5432/homework_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AWS S3 (Optional - for production storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=homework-documents

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,pdf

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.7
MIN_IMAGE_RESOLUTION=1080

# Document Retention
DOCUMENT_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
